<Window x:Class="DateAndTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DateAndTime"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Calendar Height="170" HorizontalAlignment="Left" Margin="58,32,0,0"
              Name="calendar1" VerticalAlignment="Top" Width="180" SelectedDatesChanged="calendar1_SelectedDatesChanged" />
        <TextBox Name="TextBox1" Height="40" Width="200"  
        Margin="38,0,0,68.8" VerticalAlignment="Bottom" 
        HorizontalAlignment="Left" RenderTransformOrigin="0.495,0.665">
        </TextBox>
        <Button Content="Up" HorizontalAlignment="Left" Margin="270,212,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" />
        <Button Content="Down" HorizontalAlignment="Left" Margin="270,237,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.283,-0.208" Click="Button_Click_1"/>
        <Button Content="Select" HorizontalAlignment="Left" Margin="382,237,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
        


    </Grid>
    

   
   

</Window>
